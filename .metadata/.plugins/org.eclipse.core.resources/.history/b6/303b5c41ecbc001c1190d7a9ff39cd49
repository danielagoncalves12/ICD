package tp1.socket;

import java.io.IOException;
import java.net.ServerSocket;
import java.net.Socket;

/**
 * @author Daniela Gonçalves A48579 42D
 * 
 * A classe Server, inicia uma conexão TCP no porto x 
 * e espera pela conexão de clientes.
 */

public class Server {
	
	public final static int PORT = 100;  // Porto onde vai ficar à espera

	public static void main(String[] args) {

		ServerSocket serverSocket = null;

		try {
			serverSocket = new ServerSocket(PORT); // Socket de Servidor
			Socket connectionSocket = null;		   // Socket	

			while (true) {
				System.out.println("Servidor TCP concorrente aguarda ligação no porto " + DEFAULT_PORT + "...");
				
				connectionSocket = serverSocket.accept(); 				  // Aguarda pela conexão de um cliente
				Thread thread    = new HandleConnectionThread(newSock);  // Cria um Thread
				th.start();										  // Inicia o Thread anteriormente criado
			}
		} catch (IOException e) {
			System.err.println("Erro: " + e);
		}
	} 	
}
